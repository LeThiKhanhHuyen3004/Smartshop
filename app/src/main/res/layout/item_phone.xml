<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Layout chính chứa ảnh và thông tin sản phẩm -->
    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:focusable="false"
        android:clickable="false"

        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Hình ảnh sản phẩm -->
        <ImageView
            android:id="@+id/itemPhone_image"
            android:layout_weight="3"
            android:src="@drawable/iconnew"
            android:focusable="false"
            android:clickable="false"
            android:layout_width="0dp"
            android:layout_height="100dp"/>

        <!-- Thông tin sản phẩm -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemPhone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="false"
                android:ellipsize="end"
                android:focusable="false"
                android:gravity="center"
                android:maxLines="1"
                android:text="Product Name"
                android:textSize="17sp"
                android:textStyle="normal" />
            <!--            <TextView-->
            <!--                android:id="@+id/itemPhone_idProduct"-->
            <!--                android:gravity="center"-->
            <!--                android:textSize="12sp"-->
            <!--                android:textStyle="bold"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"/>-->

            <TextView
                android:id="@+id/itemPhone_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="false"

                android:focusable="false"
                android:text="Price: 250000 VND"
                android:textAlignment="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp"
                android:textStyle="bold" />

<!--            <TextView-->
<!--                android:id="@+id/itemPhone_des"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:clickable="false"-->
<!--                android:focusable="false"-->

<!--                android:text="Description: "-->
<!--                android:textSize="14sp"-->
<!--                android:visibility="invisible" />-->
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
